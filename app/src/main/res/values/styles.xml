<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Menu Icon -->
        <item name="homeAsUpIndicator">@drawable/ic_menu</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>


        <!--Custom attributes -->
        <item name="cardTitleColor">@color/colorBlack</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Menu Icon -->
        <item name="homeAsUpIndicator">@drawable/ic_menu</item>
        <item name="android:buttonStyle">@style/AppThemeDark.ButtonColor</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>


        <!--Custom attributes -->
        <item name="cardTitleColor">@color/colorWhite</item>
    </style>

    <style name="AppThemeDark.ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
